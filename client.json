{
    "name":"NmpReporting",
    "apiVersion":"1.0",
    "base_url":"https://p4apic.emv2.com/apinmpreporting",
    "description":"Campaign Commander NMP Reporting API",
    "operations":{
        "OpenConnection":{
            "httpMethod":"POST",
            "uri":"connection",
            "summary":"This method provides a session token when given valid credentials.",
            "data": {
                "xmlRoot": { "name" : "connection" }
            },
            "parameters":{
                "login":{
                    "type":"string",
                    "location":"xml",
                    "required":true
                },
                "pwd":{
                    "type":"string",
                    "location":"xml",
                    "required":true
                },
                "key":{
                    "type":"string",
                    "location":"xml",
                    "required":true
                }
            }
        },
        "CloseConnection":{
            "httpMethod":"DELETE",
            "uri":"connection",
            "summary":"This method terminate the session token",
            "responseClass":"primitive",
            "parameters":{
                "token":{
                    "location":"header",
                    "type":"string",
                    "required":true
                }
            }
        }
    }
}